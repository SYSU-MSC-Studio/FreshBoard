@model FreshBoard.Views.Puzzle.ProblemModel
@{
    ViewBag.Title = "解密";
}

<h1>#@Model.Id @Model.Title</h1>
@Html.Raw(Model.Content)

<h4>答案</h4>
<form action="Submit" class="ui form">
    <input name="id" type="hidden" value="@Model.Id"/>
    <div class="field">
        <label>答案</label>
        <input
            type="text"
            disabled
            name="answer"
            id="answer"
            placeholder="输入该题目的答案">
    </div>
    <button class="ui button" id="data-submit" type="submit">提交</button>
</form>

@section Scripts
{
    <script type="text/javascript">
        @Html.Raw(Model.Script)
    </script>
}

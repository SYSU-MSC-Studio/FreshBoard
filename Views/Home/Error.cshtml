@model ErrorViewModel
@{
  ViewBag.Title = "错误";
}

<div class="ui grid">
  <div class="column">
    <div class="row"></div>
    <div class="row">
      <h1 class="text-danger">错误 - @Model.StatusCode</h1>
      <h2 class="text-danger">
        处理请求时发生错误: @(Model.Exception?.Message ?? Model.StatusCode.ToString())
      </h2>

      @if (Model.ShowRequestId) {
        <p>
            <strong>Request ID:</strong>
            <code>@Model.RequestId
            </code>
          </p>
      }

      <div class="ui info message">
        <div class="header">
          寻求帮助
        </div>
        <p>
          可以通过<strong>招新咨询群</strong>或<strong>页面下方联系方式</strong>
          联系网站管理员处理。请附上<strong>Request ID</strong>。
        </p>
      </div>

